ALGORITMO dólar_reais
VAR
      REAL: taxa, real1, dólar;

INÍCIO
      ESCREVA(“Digite o valor em reais para a conversão”);
      LEIA(real1);

      ESCREVA(“Digite a taxa de câmbio desejada”);
      LEIA(taxa);

      dólar <- real1/taxa

      ESCREVA(“O valor convertido em dólar é:”, dólar);

FIMALGORITMO 
